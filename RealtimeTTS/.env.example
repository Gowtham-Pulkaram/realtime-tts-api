# Python .env file for TTS API configuration

# Model Settings
TTS_MODEL_NAME=tts_models/multilingual/multi-dataset/xtts_v2
TTS_USE_CUDA=true

# Audio Settings
TTS_SAMPLE_RATE=24000
TTS_AUDIO_FORMAT=wav
TTS_CHUNK_SIZE=4096

# Server Settings
TTS_HOST=0.0.0.0
TTS_PORT=8000
TTS_WORKERS=1

# Voice Settings  
TTS_DEFAULT_LANGUAGE=en

# Performance
TTS_ENABLE_TEXT_SPLITTING=true
TTS_MAX_TEXT_LENGTH=500
